<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="체육시설"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/parkname"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:gravity="left"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_action_pos"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="위치확인"
                    android:textColor="@color/material_blue_900"
                    android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="요금"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/parknum"
                    android:layout_width="0dip"

                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="위치"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/parktime"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="지역구"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />



                <TextView
                    android:id="@+id/parkpay"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"

                    android:layout_weight="3"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="전화번호"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/parkingaddr"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btndictation"
                    android:background="@color/grey_500"
                    android:textColor="@color/white"
                    android:layout_marginLeft="150dp"
                    android:text="상세정보"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    />

                <Button
                    android:id="@+id/btnpos"
                    android:background="@color/grey_500"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="위치확인"
                    android:layout_width="60dp"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/btnfac"
                    android:background="@color/grey_500"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="시설사진"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                   />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="상세정보"
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/dictation"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/grey_800"
                    android:textSize="14dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:visibility="invisible"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/light_blue_300"
                    android:gravity="right" />




            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>